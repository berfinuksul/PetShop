@model IEnumerable<PetShop.Model.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VolunteerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolunteerAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolunteerPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolunteerAdress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceID)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@item.VolunteerID">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.VolunteerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
